@page "/CompletedTasks"
@using BlazorApp2.Data
@using Microsoft.EntityFrameworkCore
@using BlazorApp2.Models
@inject ToDoListDbContext Context

<h3>Completed Tasks</h3>

@if (tasks == null)
{
    <p>Loading...</p>
}
else if (!tasks.Any())
{
    <p>No completed tasks.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Note</th>
                <th>Due Date</th>
                <th>Category</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in tasks)
            {
                <tr>
                    <td>@task.name</td>
                    <td>@(task.note ?? "-")</td>
                    <td>@task.Dueto.ToShortDateString()</td>
                    <td>@(task.category?.ToString()??"_")</td> 
                </tr>
            }
        </tbody>
    </table>
}


@code {
    private List<TodoList> tasks;

    protected override async Task OnInitializedAsync()
    {
        tasks = await GetCompletedTasks();
    }

    private async Task<List<TodoList>> GetCompletedTasks()
    {
        return await Context.TodoLists.Where(t => t.isCompleted == true).ToListAsync();
    }

}
