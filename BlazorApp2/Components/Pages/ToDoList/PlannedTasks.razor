@using BlazorApp2.Data
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components
@using BlazorApp2.Models
@page "/PlannedTasks"
<h3>PlannedTasks</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Note</th>
            <th>Due Date</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in tasks)
        {
            <tr>
                <td>@task.name</td>
                <td>@(task.note??"_")</td>
                <td>@task.Dueto.ToShortDateString()</td>
                <td>@(task.category?.ToString()??"_")</td>
            </tr>
        }
    </tbody>
</table>

@code {
    [Inject]
    private ToDoListDbContext Context { get; set; }
    private TodoList newTask = new TodoList();
    private List<TodoList> tasks = new List<TodoList>();
    protected override async Task OnInitializedAsync()
    {
        tasks = await getPlannedTasks();
    }
    private async Task<List<TodoList>> getPlannedTasks()
    {
        return await Context.TodoLists.Where(i => i.Dueto > DateTime.Today).ToListAsync();
    }
}
