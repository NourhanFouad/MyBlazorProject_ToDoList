@page "/TasksCategory/{CategoryName}"
@using BlazorApp2.Data
@using Microsoft.EntityFrameworkCore
@using BlazorApp2.Models
@inject ToDoListDbContext Context

<h3>Tasks in @CategoryName</h3>

@if (tasks == null)
{
    <p>Loading...</p>
}
else if (!tasks.Any())
{
    <p>No tasks found in this category.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Note</th>
                <th>Due Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in tasks)
            {
                <tr>
                    <td>@task.name</td>
                    <td>@(task.note??"_")</td>
                    <td>@(task.Dueto.ToShortDateString()??"_")</td>
                </tr>
            }
        </tbody>
    </table>
}
@code {
    [Parameter]
    public string CategoryName { get; set; }

    private List<TodoList> tasks;

    protected override async Task OnParametersSetAsync()
    {
        if (Enum.TryParse<Category>(CategoryName, true, out var category))
        {
            tasks = await Context.TodoLists.Where(t => t.category == category).ToListAsync();
        }
        else
        {
            tasks = new List<TodoList>();
        }
    }
}
